			Location = [2.28, 0]
		}

		FireEffect : &<../energy_cannon/energy_cannon.rules>/Part/Components/FireEffect
		{
			Location = [2.65, 0]
		}

		TurretGraphics
		{
			Type = Graphics
			ChainedTo = Turret
			Location = [1.36, 0]
			Rotation = 90d
			OperationalToggle = IsOperational
			OperationalDoodad
			{
				Layer = "turrets"
