Part : &<../energy_cannon/energy_cannon.rules>/Part
{
	NameKey = "Parts/EnergyCannonLong"
	IconNameKey = "Parts/EnergyCannonLongIcon"
	ID = ultranova.fighter_long_energy_cannon
	OtherIDs = [] //Clears the array
	EditorGroup = "WeaponsEnergy"
	DescriptionKey = "Parts/EnergyCannonLongDesc"
	ProhibitRects
	[
		[fighter, [0, -3, 1, 3]]
	]
	EditorIcon
	{
		Texture
		{
			File = "icon.png"
			SampleMode = Linear
		}
		Size = [16, 64]
	}
	Components : ^/0/Components
	{
		BulletEmitter : &<../energy_cannon/energy_cannon.rules>/Part/Components/BulletEmitter
