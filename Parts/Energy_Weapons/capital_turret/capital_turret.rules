				{
					Sound = "./Data/ships/terran/laser_blaster_large/shoot.wav"
					Volume = .6
					Delay = 0
					SpeedVariation = .25
				}
			]
		}

		FireEffectRight : &FireEffectLeft
		{
			Type = TriggeredEffects
			ChainedTo = Turret
