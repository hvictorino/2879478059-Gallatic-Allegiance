ID = ultranova.micro_rocket
Range = 275
IdealRange = 225
Speed = 45

Components
{
	Physics
	{
		Type = BoxPhysics
		Size = [.5, 0.125]
		Density = 0.1
	}

	Homing
	{
		Type = TargetHoming
		TurnVelocity = 240d
		Delay = .1
		AvoidanceRaycastDistance = 100
		VelocityCompensation = 60%
	}

	Retarget
	{
		Type = SameShipRetarget
	}

	Acceleration
	{
		Type = Acceleration
		Acceleration = 50
	}

	NegativeAcceleration
	{
		Type = Acceleration
		Acceleration = [-75, 0]
		AccelerationOverTime = [0, .75]
		Direction = FrameOfReferenceVelocity
	}

	DeathByLifetime
	{
		Type = DeathByLifetime
		Lifetime = 10
		HasTarget = true
	}

	DeathByDistanceTraveled
	{
		Type = DeathByDistanceTraveled
		// Distance auto-computed from range.
		HasTarget = false
	}

	Sprite
	{
		Type = Sprite
		IsLit = true
		Sprite
		{
			Texture
			{
				File = "micro_rocket.png"
				MipLevels = max
			}
			Size = [1, 1]
		}

		NormalsTexture
		{
			File = "micro_rocket_normals.png"
			MipLevels = max
		}
	}

	MediaEffects
	{
		Type = MediaEffects
		Offset = [-0.3125, 0]
		Rotation = 180d
		MediaEffects
		[
			&<../../../rocket_silo/he_rocket/rocket/particles/rocket_thruster_plume.rules>
			&<../../../rocket_silo/he_rocket/rocket/particles/rocket_thruster_plume_light.rules>
		]
	}

	Targetable
	{
		Type = Targetable
		Health = 200
		TargetCategory = "missile"

		// No AOE damage when shot down.
		OnDeath = &../Hit/HitFriendly
	}

	Hit
	{
		Type = SimpleHit
		SourcePartCollisionDelay = 1.5/30

		HitShield = &HitOperational
		HitOperational
		{
			HitEffects
			[
				{
					Type = ExplosiveDamage
					TotalDamage = 4000
					Radius = 2
					Filter
					{
						Friendlies = true
					}
				}
				{
					Type = Impulse;
					Impulse = 50;
				}
			]

			MediaEffects
			[
				&<particles/rocket_hit.rules>
				&<./Data/shots/missile_he/particles/missile_he_flash.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/missile_he/missile_he_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}

				: /BASE_SHAKE
				{
					ShakeAmount = .15
					Duration = .75
				}
			]
		}
		HitStructural = &HitOperational

		HitFriendly
		{
			MediaEffects
			[
				&<particles/rocket_hit.rules>

				: /BASE_SOUNDS/AudioExterior
				{
					Sound = "./Data/shots/missile_he/missile_he_hit.wav"
					Volume = .75
					SpeedVariation = .4
				}
			]
		}
	}
}
