			{
				Layer = "roofs"
				DamageLevels
				[
					{
						File = "roof.png"
						NormalsFile = "roof_normals.png"
						Size = [1, 3]
					}
					{
						File = "roof_33.png"
						NormalsFile = "roof_normals_33.png"
						Size = [1, 3]
					}
					{
						File = "roof_66.png"
						NormalsFile = "roof_normals_66.png"
						Size = [1, 3]
					}
				]
			}
		}

		OperationEffects
		{
			Type = ToggleEffects
			Location = [0.5, 1.5]
			Toggle = IsOperational
			ToggledOnMediaEffects = &/COMMON_EFFECTS/MachinesOn
			ToggledOffMediaEffects = &/COMMON_EFFECTS/MachinesOff
		}

		BlueprintsHE
		{
			Type = BlueprintSprite
			File = "blueprints.png"
			Size = [1, 3]
		}
	}
	
	Stats
	{
		CrewRequired = &~/Part/Components/PartCrew/Crew
		RocketCapacity = 2

		RecCrew = (&CrewRequired) + (&<he_rocket/rocket_launcher_he.rules>/RocketStats/Stats/ROF) * (&<he_rocket/rocket_launcher_he.rules>/RocketStats/Stats/RocketParts) * 2
	}

	StatsByCategory
	[
		&<he_rocket/rocket_launcher_he.rules>/RocketStats
		&<torpedo/rocket_launcher_torp.rules>/RocketStats
