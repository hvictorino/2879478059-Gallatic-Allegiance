	Components : ^/0/Components
	{
		IsOperational
		{
			Type = MultiToggle
			Toggles = [PowerToggle, PartCrew]
			Mode = All
		}
		
		PowerToggle
		{
			Type = UIToggle
			ToggleID = "on_off"
			Default = 1
		}

		CommandConsumer
		{
			Type = CommandConsumer
			OperationalToggle = PowerToggle
			CommandPoints = 2
		}

		FireModeToggle
		{
			Type = UIToggle
			ToggleID = "fire_mode"
			Default = 1
			ToggledOnChoices = [0, 1, 2]
		}
		AutoTargetToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnModes = [1, 2]
		}
		AutoFireToggle
		{
			Type = ModeToggle
			Mode = FireModeToggle
			OnMode = 2
		}

		RocketType
		{
			Type = UIToggle
			ToggleID = "rocket_type"
			AvailableChoices = [0, 1]
			Default = 0
			AlwaysAllowInBuildMode = true
		}

		HERocketToggle
		{
			Type = ModeToggle
			Mode = RocketType
			OnMode = 0
		}
		HERocketComponents
		{
			Type = ToggledComponents
			Toggle = HERocketToggle
			IncludeInBlueprints = true
			Components = &<he_rocket/rocket_launcher_he.rules>/Components
		}

		TorpedoToggle
		{
			Type = ModeToggle
			Mode = RocketType
			OnMode = 1
		}
		TorpedoComponents
		{
			Type = ToggledComponents
			Toggle = TorpedoToggle
			IncludeInBlueprints = true
			Components = &<torpedo/rocket_launcher_torp.rules>/Components
		}
		
		CommonReloadTimerShort
		{
			Type = Timer
			Duration = 0.5
			AutoStart = true
			StartTrigger = CommonReloadResetTriggerProxy
		}
		CommonReloadTimerMed
		{
			Type = Timer
			Duration = 1
			AutoStart = true
			StartTrigger = CommonReloadResetTriggerProxy
		}
		CommonReloadTimerLong
		{
			Type = Timer
			Duration = 3
			AutoStart = true
			StartTrigger = CommonReloadResetTriggerProxy
		}
		CommonReloadResetTriggerProxy
		{
			Type = TriggerProxy
			ComponentID = CommonReloadResetTrigger
		}

		RocketPrereqProxy
		{
			Type = ToggleProxy
			ComponentID = RocketPrereq
		}
		
		CrewLocation
		{
			Type = CrewLocation
			Location = [.5, 2.4375]
			Rotation = 180d
		}
		PartCrew
		{
			Type = PartCrew
			Crew = 1
			DefaultPriority = &/PRIORITIES/Weapon_Crew
			PrerequisitesBeforeCrewing = [RocketPrereqProxy, PowerToggle]
			CrewDestinations
			[
				[.5, 2.4375]
			]
			CrewLocations
			[
				CrewLocation
			]
		}

		Graphics
		{
			Type = Graphics
			Location = [0.5, 1.5]
			OperationalToggle = IsOperational
			Floor
			{
				Layer = "floors"
				DamageLevels
				[
					{
						File = "floor.png"
						Size = [1, 3]
					}
					{
						File = "floor_33.png"
						Size = [1, 3]
					}
					{
						File = "floor_66.png"
						Size = [1, 3]
					}
				]
			}
			OperationalDoodad
			{
				Layer = "doodads_low"
				Offset = [0, 1]
